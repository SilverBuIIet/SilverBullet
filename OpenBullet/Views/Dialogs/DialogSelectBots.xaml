<Page
    x:Class="OpenBullet.DialogSelectBots"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenBullet"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="DialogSelectBots"
    d:DesignHeight="80"
    d:DesignWidth="300"
    Loaded="Page_Loaded"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <DockPanel Grid.Row="0">
            <Label Content="Bots:" />
            <TextBox
                x:Name="botsNumberTextbox"
                KeyDown="botsNumberTextbox_KeyDown"
                MaxLength="3"
                PreviewTextInput="botsNumberTextbox_PreviewTextInput"
                Text="1" />
        </DockPanel>
        <Button
            x:Name="selectButton"
            Grid.Row="1"
            Margin="0,5,0,0"
            Click="selectButton_Click"
            Content="Select" />
    </Grid>
</Page>
