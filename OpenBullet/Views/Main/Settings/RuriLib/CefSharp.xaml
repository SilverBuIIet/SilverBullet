<Page
    x:Class="OpenBullet.Views.Main.Settings.RL.CefSharp"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="CefSharp"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid>
        <StackPanel>
            <DockPanel Margin="0,4">
                <Label Content="UserAgent:" />
                <TextBox Text="{Binding UserAgent}" />
            </DockPanel>
            <CheckBox
                Content="IgnoreCertificateErrors"
                IsChecked="{Binding IgnoreCertificateErrors}" />
            <CheckBox
                Content="PackLoadingDisabled"
                IsChecked="{Binding PackLoadingDisabled}" />
        </StackPanel>
    </Grid>
</Page>
