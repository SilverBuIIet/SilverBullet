<Page
    x:Class="OpenBullet.Views.StackerBlocks.PageSBlockBrowserAction"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenBullet.Views.StackerBlocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PageSBlockBrowserAction"
    d:DesignHeight="500"
    d:DesignWidth="400"
    mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <DockPanel>
                <Label Content="Action:" />
                <ComboBox
                    x:Name="actionCombobox"
                    SelectionChanged="actionCombobox_SelectionChanged" />
            </DockPanel>
            <DockPanel>
                <Label Content="Input:" />
                <TextBox Text="{Binding Input, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
            <DockPanel
                x:Name="panelSUserAgent"
                Visibility="Collapsed">
                <Label
                    Padding="0"
                    VerticalContentAlignment="Center"
                    Content="UserAgent: " />
                <TextBox Text="{Binding SUserAgent, UpdateSourceTrigger=PropertyChanged}" />
            </DockPanel>
        </StackPanel>

        <TextBlock
            x:Name="functionInfoTextblock"
            Grid.Row="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Foreground="{DynamicResource ForegroundMain}"
            TextWrapping="WrapWithOverflow" />
    </Grid>
</Page>
