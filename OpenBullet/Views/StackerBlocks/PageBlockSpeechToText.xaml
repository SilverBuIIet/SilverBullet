<Page
    x:Class="OpenBullet.Views.StackerBlocks.PageBlockSpeechToText"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenBullet.Views.StackerBlocks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="PageBlockSpeechToText"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <StackPanel>
        <DockPanel Margin="0,0,2,0">
            <Label Content="Variable Name:" />
            <TextBox Text="{Binding VariableName, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <Label Content="URL:" />
            <TextBox Text="{Binding AudioUrl, UpdateSourceTrigger=PropertyChanged}" />
        </DockPanel>
        <DockPanel>
            <Label Content="Lang:" />
            <ComboBox
                Name="LangComboBox"
                SelectedIndex="0">
                <ComboBoxItem>eng</ComboBoxItem>
            </ComboBox>
        </DockPanel>
    </StackPanel>
</Page>
