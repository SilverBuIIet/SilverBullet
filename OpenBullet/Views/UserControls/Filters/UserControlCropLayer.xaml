<UserControl
    x:Class="OpenBullet.Views.UserControls.Filters.UserControlCropLayer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenBullet.Views.UserControls.Filters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Margin="0,-6,0,0"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Initialized="UserControl_Initialized"
    mc:Ignorable="d">
    <StackPanel>
        <Label Content="Left:" />
        <TextBox
            Name="LeftTextBox"
            Text="0"
            TextChanged="TextBoxCL_TextChanged" />
        <Label Content="Top:" />
        <TextBox
            Name="TopTextBox"
            Text="0"
            TextChanged="TextBoxCL_TextChanged" />
        <Label Content="Right:" />
        <TextBox
            Name="RightTextBox"
            Text="0"
            TextChanged="TextBoxCL_TextChanged" />
        <Label Content="Bottom:" />
        <TextBox
            Name="BottomTextBox"
            Text="0"
            TextChanged="TextBoxCL_TextChanged" />
        <Label Content="Crop Mode:" />
        <ComboBox
            Name="CropModeBox"
            SelectedIndex="1"
            SelectionChanged="CropModeBox_SelectionChanged" />
    </StackPanel>
</UserControl>
