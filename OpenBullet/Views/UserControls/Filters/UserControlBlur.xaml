<UserControl
    x:Class="OpenBullet.Views.UserControls.Filters.UserControlBlur"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenBullet.Views.UserControls.Filters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    Margin="0,-6,0,0"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Initialized="UserControl_Initialized"
    mc:Ignorable="d">

    <StackPanel>
        <Label Content="Radius:" />
        <TextBox
            Name="RadiusTextBox"
            TextChanged="TextBox_TextChanged" />
        <Label Content="Sigma:" />
        <TextBox
            Name="SigmaTextBox"
            TextChanged="TextBox_TextChanged" />
        <Label Content="Channels:" />
        <ComboBox
            Name="ChannelsComboBox"
            SelectedIndex="0"
            SelectionChanged="ChannelsComboBox_SelectionChanged" />
    </StackPanel>
</UserControl>
