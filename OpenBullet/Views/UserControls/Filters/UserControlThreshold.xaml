<UserControl
    x:Class="OpenBullet.Views.UserControls.Filters.UserControlThreshold"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:OpenBullet.Views.UserControls.Filters"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    Initialized="UserControl_Initialized"
    mc:Ignorable="d">
    <StackPanel>
        <Label Content="Thresh:" />
        <TextBox
            Name="ThreshTextBox"
            TextChanged="TextBox_TextChanged" />
        <Label Content="Max Value:" />
        <TextBox
            Name="MaxValueTextBox"
            Text="255" />
        <Label Content="Threshold Type:" />
        <ComboBox
            Name="ThresholdTypeComboBox"
            SelectedIndex="0"
            SelectionChanged="ComboBox_SelectionChanged" />
    </StackPanel>
</UserControl>
